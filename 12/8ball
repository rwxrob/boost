welcome ()
{
	echo "$art"
  echo "$red"
  cat <<-EOM
	ðŸŽ± Welcome to the magic eight ball. Enter a yes or no question and
	your answer will be granted.
	EOM
  echo "$reset"
}

8ball ()
{
	local $i 
	welcome
	while IFS= read -p "> " line; do
    printf "${magenta}Q${reset}: %s\n" "$line"
		printf "${blue}A${reset}: %s\n"  "${answers[RANDOM%${#answers}]}"

# TODO using match logic comparisons, if statement and RANDOM create
